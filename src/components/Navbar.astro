    <!--  <a href="/"-->
    <!--     class="cursor-pointer rounded-full px-2 py-1 transition-colors hover:bg-gray-500 hover:text-white">Acerca-->
    <!--    de</a>-->
    <!--</li>-->
  </ul>
</nav>
