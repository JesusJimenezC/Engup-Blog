---
import LogoIcon from '../assets/menu/logo.svg';
---

<nav
  class="mt-6 mb-10 flex h-10 content-center items-center justify-between rounded-full bg-white px-6 shadow-lg w-[90%] mx-auto z-10 max-w-[80ch] fixed">
  <a href="/" class="flex w-max flex-row content-center">
    <LogoIcon class="w-6 fill-gray-700" />
    <h1 class="ml-1 text-blue-500">Eng<span class="text-gray-400">Up</span></h1>
  </a>

  <input type="checkbox" class="peer/menu-toggle hidden" id="menu-toggle" />
  <label
    for="menu-toggle"
    class="bg-open-menu peer-checked/menu-toggle:bg-close-menu z-10 h-10 w-10 cursor-pointer rounded-lg bg-cover bg-center text-white transition-all md:hidden"
  >.</label>

  <ul
    class="bg-menu fixed inset-0 grid auto-rows-max content-center justify-items-center gap-6 bg-white px-[5%] text-gray-700 transition-[clip-path] duration-500 ease-in-out [clip-path:circle(0%_at_top_right)] peer-checked/menu-toggle:[clip-path:circle(150%_at_top_right)] md:relative md:grid-flow-col md:bg-transparent md:p-0 md:[clip-path:unset]">
    <li>
      <a href="/"
         class="cursor-pointer rounded-full px-2 py-1 transition-colors hover:bg-gray-500 hover:text-white"
      >Inicio</a>
    </li>
    <li>
      <a href="/posts"
         class="cursor-pointer rounded-full px-2 py-1 transition-colors hover:bg-gray-500 hover:text-white">Entradas</a>
    </li>
